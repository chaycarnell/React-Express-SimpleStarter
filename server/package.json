{
  "name": "express-starter",
  "version": "1.0.0",
  "description": "A starter Express server setup for new projects",
  "license": "ISC",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "check:audit": "npm audit --level high",
    "check:outdated": "npm outdated || true",
    "check:types": "tsc --noEmit",
    "dev": "tsx watch --env-file=.env ./src/expressServer.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky",
    "sort:package": "npx sort-package-json",
    "start": "node --env-file=.env ./dist/expressServer.js",
    "test": "true",
    "test:ci": "true"
  },
  "dependencies": {
    "compression": "1.7.4",
    "cors": "2.8.5",
    "express": "4.19.2",
    "helmet": "7.1.0",
    "uuid": "9.0.1",
    "winston": "3.13.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.12.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "5.4.3"
  },
  "engines": {
    "node": ">=21.6.1"
  }
}
